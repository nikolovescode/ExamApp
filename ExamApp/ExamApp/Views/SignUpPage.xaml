<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamApp.Views.SignUpPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="1" Margin="40,0,40,0">
                <Entry Placeholder="Epost" x:Name="EntEmail"/>
                <Entry Placeholder="Lösenord" x:Name="EntPassword" IsPassword="True"/>
                <Entry Placeholder="Skriv lösenord en gång till" x:Name="EntConfirmPassword" IsPassword="True"/>
                <Button Text="Registrera dig" BackgroundColor="#c287e8" x:Name="BtnSignUp" Clicked="BtnSignUp_OnClicked"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>