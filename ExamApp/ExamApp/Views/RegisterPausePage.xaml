<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamApp.Views.RegisterPausePage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="1" Margin="40,0,40,0">
                <Label>Hur länge vill du vila innan ett nytt arbetspass?</Label>
                <Entry Placeholder="10 min" x:Name="EntMin"/>
                <Button Text="Registrera tid för vila" BackgroundColor="#c287e8" x:Name="BtnSignUp" Clicked="BtnSignUp_OnClicked"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>