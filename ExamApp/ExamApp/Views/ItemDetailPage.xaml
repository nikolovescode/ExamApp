<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamApp.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Item.TitleWorkTask}" FontSize="Medium"/>
        <Label x:Name="lblInterest"/>
        <Switch HorizontalOptions="Center"
                    Toggled="Switch_Toggled"/>
        <Label x:Name="lblAverage"/>
        <Label x:Name="lblRecommendation"/>
        <Button x:Name="ViewNotes" 
                Margin="0,0,0,0" 
                Text="Se Anteckningar" Clicked="ViewNotes_Clicked"
                BackgroundColor="#e6adec"/>
        <Button x:Name="AddToCalendar" 
                Margin="0,0,0,0" 
                Text="Lägg uppgift i kalender" Clicked="AddToCalendar_Clicked"
                BackgroundColor="#e6adec"/>
    </StackLayout>

</ContentPage>