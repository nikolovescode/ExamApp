<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamApp.Views.PausePage">
    <ContentPage.Content>

        <StackLayout Grid.Row="1" Margin="40,40,40,20">
            <StackLayout>
                <Label Text="Paus timer"
               FontSize="20"
               HorizontalOptions="Center"
               TextColor="Black"/>
            </StackLayout>
            <StackLayout>
                <ProgressBar x:Name="MainProgressBar"
                 
                     ProgressColor="#efb9cb"
                     Progress="0"
                     WidthRequest="300"
                     HeightRequest="20"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"/>
            </StackLayout>
            <StackLayout>
                <Button x:Name="StartTimerButton" 
                Margin="0,50,0,0" 
                Text="Ta Paus" Clicked="StartTimerButton_Clicked"
                BackgroundColor="#e6adec"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>